
@if (ViewData["error"] != null)
{
    <div class="alert alert-danger alert-dismissable">
        <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
        <strong>Erro: </strong>@ViewData["Mensagem"]
    </div>
}

